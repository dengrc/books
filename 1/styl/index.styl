@import '../styl/reset';

html, body {
    height: 100%;
    background-color: rgb(216, 185, 138);
}

.swiper {
    &-container, &-wrapper {
        height: 100%;
    }

    &-slide {
        // background-position: center center;
        // background-size: contain;
        // background-repeat: no-repeat;
        &-image {
            width: 100%;
            height: 100%;
            background-position: center center;
            background-size: contain;
            background-repeat: no-repeat;

            &-landscape {
                width: 100vmax;
                height: 100vmin;
                //transform-origin: 0 0;
                position: relative;
                top:50%;
                left:50%;
                transform:translate3d(-50%,-50%,0) rotate(90deg);
            }
        }
    }
}

form {
    position: fixed;
    z-index: 2;
    bottom: 0.5em;
    right: 0.5em;

    input {
        border: none;

        &:focus {
            outline: 1px solid #666;
        }
    }

    button {
        width: 1px;
        height: 1px;
    }
}